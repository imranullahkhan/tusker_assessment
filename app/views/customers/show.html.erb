<h1 align="center">Showing selected customer</h1>

<div class="well col-xs-8 col-xs-offset-2">
	<h4 class="description"><strong>First name:</strong></h4>
	<%= @customer.fname %>
	<hr>	
	<h4 class="description"><strong>Last name:</strong></h4>
	<%= @customer.sname %>	
	<hr>	
	<h4 class="description"><strong>City:</strong></h4>
	<%= @customer.city %>	
	<hr>

	<div class="customer-actions">
		<%= link_to "Edit this customer", edit_customer_path(@customer), class: "btn btn-xs btn-primary" %>
		<%= link_to "Delete this customer", customer_path(@customer), method: :delete, 
																      data: { confirm: "Are you sure you want to delete the customer?" }, 
																      class: "btn btn-xs btn-danger" %>
		<%= link_to "View all customers", customers_path, class: "btn btn-xs btn-success" %>
	</div>

</div>

