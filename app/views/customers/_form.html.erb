<%= render 'shared/errors', obj: @customer %>

<div class="row">
	<div class="col-xs-12">
		<%= form_for(@customer, :html => {class: "form-horizontal", role: "form"}) do |f| %>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :fname %>
				</div>
				<div class="col-sm-8">				
					<%= f.text_field :fname, class: "form-control", placeholder: "First name of customer", autofocus: true %>
				</div>
			</div>
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :sname %>
				</div>
				<div class="col-sm-8">	
					<%= f.text_field :sname, class: "form-control", placeholder: "Last name of customer", autofocus: true %>
				</div>
			</div>	
			<div class="form-group">
				<div class="control-label col-sm-2">
					<%= f.label :city %>
				</div>
				<div class="col-sm-8">					
					<%= f.text_field :city, class: "form-control", placeholder: "City of customer", autofocus: true %>
				</div>
			</div>	

			<div class="form-group">
				<div class="col-sm-offset-2 col-sm-10">
					<%= f.submit class: "btn btn-primary btn-lg" %>
				</div>
			</div>	
		<% end %>

		<div class="col-xs-4 col-xs-offset-4">
			[ <%= link_to "Cancel request and return to customers listing", customers_path %> ]
		</div>

	</div>
</div>